#!/usr/bin/make -f
# -*- makefile -*-

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

%:
	dh --with quilt,autotools_dev $@

override_dh_auto_test:
	# The test suite is buggy.
	-dh_auto_test

override_dh_auto_clean:
	dh_auto_clean
	sed -i 's,gps_close,gps_poll,g' configure

override_dh_auto_configure:
	sed -i 's,gps_poll,gps_close,g' configure
	dh_auto_configure

.PHONY: override_dh_auto_test
